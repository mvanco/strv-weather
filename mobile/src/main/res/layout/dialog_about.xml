<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android">

	<data>

		<variable
			name="data" type="String"/>
	</data>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="start"
			android:layout_marginBottom="@dimen/global_spacing_24"
			android:layout_marginLeft="@dimen/global_spacing_24"
			android:layout_marginRight="@dimen/global_spacing_24"
			android:layout_marginTop="@dimen/global_spacing_16"
			android:text="@{data}"
			android:textAppearance="@style/TextAppearance.STRVWeather.Subhead"/>

	</FrameLayout>
</layout>
